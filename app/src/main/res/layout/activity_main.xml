<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <EditText
            android:id="@+id/data2SendEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@+id/connectPythonBut"/>

        <EditText
            android:id="@+id/data2SendEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/connectPythonBut"
            android:layout_centerVertical="true"
            android:layout_marginBottom="58dp" />

        <Button
            android:id="@+id/connectPythonBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send To Python"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/replyMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connectPythonBut"
            android:layout_centerInParent="true"
            android:text="reply message"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>